CREATE TABLE "generes" (
  "id_genere" int PRIMARY KEY,
  "name_generes" varchar(80)
);

CREATE TABLE "artists" (
  "id_artist" int PRIMARY KEY,
  "name_artist" varchar(80)
);

CREATE TABLE "album" (
  "id_album" int PRIMARY KEY,
  "name_album" varchar(80),
  "release_album" date
);

CREATE TABLE "track" (
  "id_track" int PRIMARY KEY,
  "name_track" varchar(80),
  "duratione" int,
  "id_album" int
);

CREATE TABLE "generes_and_artists" (
  "id_generes_artist" int PRIMARY KEY,
  "id_genere" int,
  "id_artist" int
);

CREATE TABLE "artists_album" (
  "id_artist_album" int PRIMARY KEY,
  "id_album" int,
  "id_artist" int
);

CREATE TABLE "collection" (
  "id_collection" int PRIMARY KEY,
  "name_collection" varchar(80),
  "release_collection" date,
  "id_album" int,
  "id_track" int
);

ALTER TABLE "album" ADD FOREIGN KEY ("id_album") REFERENCES "track" ("id_album");

ALTER TABLE "generes" ADD FOREIGN KEY ("id_genere") REFERENCES "generes_and_artists" ("id_genere");

ALTER TABLE "artists" ADD FOREIGN KEY ("id_artist") REFERENCES "generes_and_artists" ("id_artist");

ALTER TABLE "album" ADD FOREIGN KEY ("id_album") REFERENCES "artists_album" ("id_album");

ALTER TABLE "artists" ADD FOREIGN KEY ("id_artist") REFERENCES "artists_album" ("id_artist");

ALTER TABLE "album" ADD FOREIGN KEY ("id_album") REFERENCES "collection" ("id_album");

ALTER TABLE "track" ADD FOREIGN KEY ("id_track") REFERENCES "collection" ("id_track");
